<?xml version="1.0" encoding="UTF-8"?>  
<configuration>  
 <system.webServer>
  <handlers>
    <add name="httpPlatformHandler" path="*" verb="*" 
          modules="httpPlatformHandler" resourceType="Unspecified" />
    </handlers>

    <httpPlatform processPath="D:\home\python364x86\python.exe"
  arguments="startup.py" requestTimeout="00:10:00" startupTimeLimit="120" startupRetryCount="3" stdoutLogEnabled="true">
    <environmentVariables>
      <environmentVariable name="PYTHONPATH" value="D:\home\site\wwwroot" />
      <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
      <environmentVariable name="ACCOUNT_NAME" value="%ACCOUNT_NAME%" />
      <environmentVariable name="ACCOUNT_KEY" value="%ACCOUNT_KEY%" />
      <environmentVariable name="DEBUG_FILE" value="%DEBUG_FILE%" />
    </environmentVariables>
    </httpPlatform>
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin"/>
        </hiddenSegments>
        <requestLimits maxAllowedContentLength="4294967295"/>
      </requestFiltering>
    </security>
  </system.webServer>
</configuration>  